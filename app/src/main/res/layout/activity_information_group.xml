<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EDEDED"
    tools:context=".Views.InformationGroupActivity">



    <androidx.appcompat.widget.Toolbar

        android:id="@+id/toolbar_single_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_sky">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_back_activity" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Thông tin nhóm"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/img_edit_info_group"
                android:layout_width="30sp"
                android:layout_height="40sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10sp"
                android:src="@drawable/ic_edit" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:background="@color/white"
       android:elevation="2dp"
       android:layout_gravity="center_horizontal"
       android:layout_height="wrap_content">

       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/img_group_avatar"
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="20sp"/>
       <TextView
           android:id="@+id/group_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="18sp"
           android:textColor="@color/black"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="10sp"/>

       <TextView
           android:id="@+id/group_description"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:maxWidth="300dp"
           android:maxHeight="150dp"
           android:layout_marginBottom="10sp"
           android:textSize="16sp"
           android:textColor="@color/black"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="10sp"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#E8E5E5"
        android:layout_marginTop="10sp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_participant"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@color/white"
            android:paddingStart="10sp"
            android:text="Thành viên nhóm"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:drawablePadding="10sp"
            android:drawableStart="@drawable/ic_participant"/>
        <TextView
            android:id="@+id/add_participant"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@color/white"
            android:layout_marginTop="2sp"
            android:paddingStart="10sp"
            android:text="Thêm thành viên nhóm"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:drawablePadding="10sp"
            android:drawableStart="@drawable/ic_add_participanr"/>

        <TextView
            android:id="@+id/delete_group"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@color/white"
            android:layout_marginTop="2sp"
            android:paddingStart="10sp"
            android:text="Giải tán nhóm"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:drawablePadding="10sp"
            android:drawableStart="@drawable/ic_delete"/>
        <TextView
            android:id="@+id/leave_group"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@color/white"
            android:layout_marginTop="2sp"
            android:paddingStart="10sp"
            android:text="Rời nhóm"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:drawablePadding="10sp"
            android:drawableStart="@drawable/ic_leave"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>
</LinearLayout>